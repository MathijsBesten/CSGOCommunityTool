<Window x:Class="CSGOCommunityTool.Windows.SteamGuard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSGOCommunityTool.Windows"
        mc:Ignorable="d"
        Title="SteamGuard" Height="300" Width="300">
    <Grid>
        <Label x:Name="SteamGuardInfo" Content="On your steam account, Steam Guard is active.&#xD;&#xA;Please enter your Steam guard code below" HorizontalAlignment="Left" VerticalAlignment="Top" Width="272" Margin="10,0,0,0" Height="45"/>
        <Label x:Name="SteamGuardTitle" Content="STEAM GUARD CODE" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,104,0,0" Width="130"/>
        <Button x:Name="SteamGuardLogin" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,239,0,0" Click="SteamGuardLogin_Click"/>
        <PasswordBox x:Name="SteamGuardCode" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top" Width="130"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="0" Margin="380,239,-93,0" VerticalAlignment="Top" Width="5"/>

    </Grid>
</Window>
